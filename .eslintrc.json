{
  "extends": [
    "eslint:recommended",
    "standard-react"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
    "indent": ["error", 4],
    "no-const-assign": "error",
    "no-var": "error",
    "prefer-const": "error",

    "react/jsx-indent": [ 2, 4 ]
  }
}
